{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      1,
      120,
      2,
      {
        "ignoreComments": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "react/prop-types": 0,
    "no-shadow": "off",
    "radix": 0,
    "indent": [
      2,
      "tab"
    ],
    "no-tabs": 0,
    "linebreak-style": 0
  },
  "globals": {
    "window": true,
    "document": true,
    "navigator": true,
    "location": true,
    "jest": true,
    "Image": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ]
}